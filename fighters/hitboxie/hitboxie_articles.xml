<articles>

	<SplatArticle>
		<sprite>hitboxie_projectile.png</sprite>
		<length>120</length>
		<imgWidth>16</imgWidth>
		<originPoint>0,0</originPoint>
		<facingDirection>1</facingDirection>
		
		<setUp>
			<createHitbox>
				<name>SplatHitbox</name>
			</createHitbox>
			<changeFighterSpeed>
				<xSpeed relative="True">24</xSpeed>
			</changeFighterSpeed>
			
			<activateHitbox>SplatHitbox</activateHitbox>
			<!-- Need to set origin point when creating an article in fighter-->
		</setUp>
		
		<!-- Collision event if "other" is in the other object's class hierarchy -->
		<collision other="AbstractFighter">
			<deactivateSelf />
		</collision>
		
		<collision other="Platform">
			<deactivateSelf />
		</collision>
		
		<frame number="before">
			<changeSpeed>
				<ySpeed relative="True">0.5</ySpeed>
			</changeSpeed>
		</frame>
	</SplatArticle>
	
	<ShineArticle>
		<sprite>hitboxie_shine.png</sprite>
		<length>8</length>
		<imgWidth>92</imgWidth>
		<spriteRate>2</spriteRate>
		<originPoint>0,0</originPoint>
		
		<frame number="before">
			<recenterOnOrigin />
		</frame>
		<frame number="last">
			<setFrame>2</setFrame>
		</frame>
	</ShineArticle>
</articles>
