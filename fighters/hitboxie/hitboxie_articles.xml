<articles>

	<SplatArticle>
		<sprite>hitboxie_projectile.png</sprite>
		<length>120</length>
		<img_width>16</img_width>
		<origin_point>0,0</origin_point>
		<facing_direction>1</facing_Direction>
		
		<setUp>
			<createHitbox>
				<name>SplatHitbox</name>
			</createHitbox>
			<changeFighterSpeed>
				<xSpeed relative="True">24</xSpeed>
			</changeFighterSpeed>
			
			<activateHitbox>SplatHitbox</activateHitbox>
			<!-- Need to set origin point when creating an article in fighter-->
		</setUp>
		
		<!-- Collision event if "other" is in the other object's class hierarchy -->
		<collision other="AbstractFighter">
			<deactivateSelf />
		</collision>
		
		<collision other="Platform">
			<deactivateSelf />
		</collision>
		
		<frame number="before">
			<changeSpeed>
				<ySpeed relative="True">0.5</ySpeed>
			</changeSpeed>
		</frame>
	</SplatArticle>
	
	<ShineArticle>
		<sprite>hitboxie_shine.png</sprite>
		<length>8</length>
		<img_width>92</img_width>
		<sprite_rate>2</sprite_rate>
		<origin_point>0,0</origin_point>
		
		<frame number="before">
			<recenterOnOrigin />
		</frame>
		<frame number="last">
			<setFrame>2</setFrame>
		</frame>
	</ShineArticle>
</articles>
